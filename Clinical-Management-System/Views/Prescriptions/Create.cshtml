@model Clinical_Management_System.ViewModel.PrescriptionVM

@{
    ViewBag.Title = "Create Prescription";
}

<div class="col-12 d-flex justify-content-end mb-2">
    <a asp-controller="Prescriptions" asp-action="Index" class="btn btn-secondary shadow-sm">
        <i class="bi bi-arrow-left"></i> Back to Prescriptions List
    </a>
</div>



    <div >
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3 form-floating">
                 <label for="DiagnosisName" style="margin-top:-26px">Diagnosis</label>
                <input asp-for="DiagnosisName" class="form-control" id="DiagnosisName" placeholder="Diagnosis" required />
               
                <span asp-validation-for="DiagnosisName" class="text-danger"></span>
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="DateTime" type="datetime-local" class="form-control" id="DateTime" required />
            <label for="DateTime" style="margin-top:-15px; color:#000000;">Date and Time</label>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="mb-3 form-floating">
                <select asp-for="AppointmentId" class="form-select" asp-items="@Model.Appointments" required>
                    <option value="">Select an Appointment</option>
                </select>
            <label for="AppointmentId" style="margin-top:-15px ; color:#000000">Appointment</label>
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" >
                    <i class="bi bi-check-circle"></i> Create Prescription
                </button>
            </div>
        </form>
        <div class="toggle-container">
            <div class="toggle">

                <div class="toggle-panel toggle-right">
                <img src="/assets/logo3.png" alt="Company Logo" id="ilupal" style="width: 150px; height: auto;">
                <a asp-controller="Medicines" >
                    <button type="submit">Add Medicines </button>
                </a>
                    
                

                </div>
            </div>
        </div>

    </div>
</div>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Montserrat', sans-serif;
    }



    .container {
        background-color: #fff;
        border-radius: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.35);
        position: relative;
        overflow: hidden;
        width: 1000px;
        max-width: 100%;
        min-height: 480px;
        margin-top: 50px;
    }

        .container h1 {
            margin: 20px 10px;
        }

        .container p {
            font-size: 14px;
            line-height: 20px;
            letter-spacing: 0.3px;
            margin: 10px 0;
        }

        .container span {
            font-size: 12px;
        }

        .container a {
            color: #333;
            font-size: 13px;
            text-decoration: none;
            margin: 15px 0 10px;
        }

        .container button {
            background-color: #789a5c;
            color: #fff;
            font-size: 12px;
            padding: 10px 45px;
            border: 1px solid transparent;
            border-radius: 8px;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            margin-top: 30px;
            margin-left:30px;
            cursor: pointer;
        }


            .container button:hover {
                background-color: transparent; 
                border-color: #4f647b;
                color: #4f647b;
                
            }
            .container button.hidden {
                background-color: transparent;
                border-color: #fff;
            }

        .container form {
   
        }

        .container input {
            background-color: #eee;
            border: none;
            margin: 8px 0;
            padding: 10px 15px;
            font-size: 13px;
            border-radius: 8px;
            width:450px;
            outline: none;
        }


        .container select {
            background-color: #eee;
            border: none;
            margin: 8px 0;
            padding: 10px 15px;
            font-size: 13px;
            border-radius: 8px;
            width: 450px;
            outline: none;
        }

    .form-container {
        position: absolute;
        top: 0;
        height: 100%;
        transition: all 0.6s ease-in-out;
    }

    .Next {
        left: 0;
        width: 50%;
        opacity: 0;
        z-index: 1;
    }

    .container.active .Next {
        transform: translateX(100%);
        opacity: 1;
        z-index: 5;
        animation: move 0.6s;
    }





    .toggle-container {
        position: absolute;
        top: 0;
        left: 50%;
        width: 50%;
        height: 100%;
        overflow: hidden;
        transition: all 0.6s ease-in-out;
        border-radius: 150px 0 0 100px;
        z-index: 1000;
    }

    .container.active .toggle-container {
        transform: translateX(-100%);
        border-radius: 0 150px 100px 0;
    }

    .toggle {
        background-color: #c4dc84;
        height: 100%;
        background: linear-gradient(to right, #f3f3f3, #789a5c);
        color: #fff;
        position: relative;
        left: -100%;
        height: 100%;
        width: 200%;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
    }

    .container.active .toggle {
        transform: translateX(50%);
    }

    .toggle-panel {
        position: absolute;
        width: 50%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 0 30px;
        text-align: center;
        top: 0;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
    }



    .toggle-right {
        right: 0;
        transform: translateX(0);
    }

    .container.active .toggle-right {
        transform: translateX(200%);
    }


    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
