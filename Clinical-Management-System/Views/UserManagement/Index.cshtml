
@model IEnumerable<UserManagementViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h1 class="text-center">User Management</h1>

<table class="table table-hover table-striped table-lg  table-borderless text-center align-middle" >
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary text-white" asp-route-id="@user.UserId">Edit</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
