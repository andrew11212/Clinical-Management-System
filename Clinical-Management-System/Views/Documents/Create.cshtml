@model Clinical_Management_System.Models.DB_Entities.Document



@{
    ViewData["Title"] = "Create Document";
}

<h2>Create Document</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
   

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label"></label>
        <input asp-for="CreatedDate" class="form-control" type="date" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label">Upload Image</label>
        <input type="file" name="imageFile" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrescriptionId" class="control-label"></label>
        <select asp-for="PrescriptionId" class="form-control" asp-items="ViewBag.PrescriptionId"></select>
        <span asp-validation-for="PrescriptionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
