@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h1>Doctors List</h1>

<table class="table">
    <thead>
        <tr>
            <th>National Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Specialization</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.NationalId</td>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.City</td>
                <td>@doctor.Specialization.SpecializationName</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
