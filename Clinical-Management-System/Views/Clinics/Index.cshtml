@model IEnumerable<Clinical_Management_System.Models.DB_Entities.Clinic>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0">
    <div class="card-header  text-light text-center" style="background: linear-gradient(to right, #008080, #014d4e);">
        <h2 class="m-0">clinc</h2>
    </div>
    <div class="card-body">
        <div class="col-12 d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary shadow-sm" style="background: #008080">
                <i class="bi bi-patch-plus"></i> Create New
            </a>
        </div>
        <table class="table table-hover table-striped table-lg  table-borderless text-center align-middle">
            <thead>
                <tr>
                    <th>Open Time</th>
                    <th>Close Time</th>
                    <th>City</th>
                    <th>Building Number</th>
                    <th>Street Name</th>
                    <th>Government</th>
                    <th>Floor</th>
                    <th>Doctor</th>
                    <!-- <th>Appointments</th>-->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clinic in Model)
                {
                    <tr>
                        <td>@clinic.OpenTime</td>
                        <td>@clinic.CloseTime</td>
                        <td>@clinic.City</td>
                        <td>@clinic.BuildingNum</td>
                        <td>@clinic.StreetName</td>
                        <td>@clinic.Government</td>
                        <td>@clinic.Floor</td>
                        <td>@clinic.Doctor.FirstName @clinic.Doctor.LastName</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-2 " style="background: #008080" asp-action="Edit" asp-route-id="@clinic.ClinicId">Edit</a> |
                            <a class="btn btn-sm btn-primary  me-2" asp-action="Details" asp-route-id="@clinic.ClinicId">Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
