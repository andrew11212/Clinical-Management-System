@page
@model ForgotPasswordModel
@section HideNavbar { }
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 style="margin-left:450px; margin-bottom:-20px; margin-top:10px;">@ViewData["Title"]</h1>

<div class="row align-items-center">
    <div class="col-md-6 d-flex justify-content-center" style="margin-right:-50px;">
        <img src="/assets/download.jfif" alt="Isometric login image" style="width: 300px; height:400px;">
    </div>
    <div class="col-md-6 d-flex justify-content-end">
       <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class=" mb-3">
                <label asp-for="Input.Email" class="form-label" style="margin-bottom:-10px; margin-left:270px; "></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="width:300px; border: 1px solid #ccc; border-radius: 20px; background:#0000; margin-left:260px; " />
                
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="" style="background: linear-gradient(to right, #ebeff5, #886794); color: #fff; font-size: 17px;padding: 10px 45px;border-radius: 20px; font-weight: 600; letter-spacing: 0.5px; text-transform: uppercase; margin-left:290px; width:240px;margin-top:30px;">Reset Password</button>
        </form>
        
    </div>

</div>

<style>
    .text-gradient {
        background: linear-gradient(to right, #96afbe, #2d5763);
        -webkit-background-clip: text; /* For Safari */
        -webkit-text-fill-color: transparent; /* For Safari */
        background-clip: text; /* For other browsers */
        color: transparent;
        font-size: 30px;
        font-weight: bold;
    }

    .hide-on-register {
        display: none;
    }

    body {
        background-color: #c9d6ff;
        background: linear-gradient(to right, #4f757e, #2d5763);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.35);
        position: relative;
        overflow: hidden;
        width: 750px;
        height: 450px;
        max-width: 100%;
        min-height: 480px;
        margin-top: 50px;
    }

    .login-form {
        width: 300px;
        padding: 20px;
        background-color:   #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    input {
        width: 500px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .image-container {
        margin-left:   10px; /* Adjust the margin as needed */
    }

    img {
        margin-top:10px;
        width: 50px;
        height: auto;
    }

    .toggle-container {
        position: absolute;
        top: 0;
        left: 50%;
        width: 50%;
        height: 100%;
        overflow: hidden;
        transition: all 0.6s ease-in-out;
        border-radius: 150px 0 0 100px;
        z-index: 1000;
    }

    .container.active .toggle-container {
        transform: translateX(-100%);
        border-radius: 0 150px 100px 0;
    }

    .toggle {
        background-color: #0000;
        height: 100%;
        color: #fff;
        position: relative;
        left: -100%;
        height: 100%;
        width: 200%;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
    }

    .container.active .toggle {
        transform: translateX(50%);
    }

    .toggle-panel {
        position: absolute;
        width: 50%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 0 30px;
        text-align: center;
        top: 0;
        transform: translateX(0);
        transition: all 0.6s ease-in-out;
    }



    .toggle-right {
        right: 0;
        transform: translateX(0);
    }

    .container.active .toggle-right {
         transform: translateX(0);
    }

</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
