@page
@model RegisterPatientModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- National ID -->
            <div class="form-group">
                <label asp-for="Input.NationalId"></label>
                <input asp-for="Input.NationalId" class="form-control" />
                <span asp-validation-for="Input.NationalId" class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <!-- First Name -->
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- City -->
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <!-- Government -->
            <div class="form-group">
                <label asp-for="Input.Government"></label>
                <input asp-for="Input.Government" class="form-control" />
                <span asp-validation-for="Input.Government" class="text-danger"></span>
            </div>

            <!-- Street Name -->
            <div class="form-group">
                <label asp-for="Input.StreetName"></label>
                <input asp-for="Input.StreetName" class="form-control" />
                <span asp-validation-for="Input.StreetName" class="text-danger"></span>
            </div>

            <!-- Floor -->
            <div class="form-group">
                <label asp-for="Input.Floor"></label>
                <input asp-for="Input.Floor" class="form-control" />
                <span asp-validation-for="Input.Floor" class="text-danger"></span>
            </div>

            <!-- Building Number -->
            <div class="form-group">
                <label asp-for="Input.BuildingNum"></label>
                <input asp-for="Input.BuildingNum" class="form-control" />
                <span asp-validation-for="Input.BuildingNum" class="text-danger"></span>
            </div>

            <!-- Photo -->
            <div class="form-group">
                <label asp-for="Input.Photo"></label>
                <input asp-for="Input.Photo" class="form-control" />
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>

            <!-- Allergies -->
            <div class="form-group">
                <label asp-for="Input.Allergies"></label>
                <input asp-for="Input.Allergies" class="form-control" />
                <span asp-validation-for="Input.Allergies" class="text-danger"></span>
            </div>

            <!-- Chronic Diseases -->
            <div class="form-group">
                <label asp-for="Input.ChronicDiseases"></label>
                <input asp-for="Input.ChronicDiseases" class="form-control" />
                <span asp-validation-for="Input.ChronicDiseases" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
